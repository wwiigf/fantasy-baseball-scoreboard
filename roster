    <script>
        // ********UPDATE DATE HERE********
        const updateDate = "March 28, 2025"; // Manually update this date
        
        // ********UPDATE PITCHERS DATA HERE********
        const pitchersData = [
            { position: "SP", name: "Paul Skenes", bbRefId: "skenepa01" },
            { position: "SP", name: "Yoshinobu Yamamoto", bbRefId: "yamamyo01" },
            { position: "SP", name: "Sandy Alcantara", bbRefId: "alcansa01" },
            { position: "SP", name: "Bryan Woo", bbRefId: "woobr01" },
            { position: "SP", name: "Dustin May", bbRefId: "maydu01" },
            { position: "SP", name: "Chris Bassitt", bbRefId: "bassich01" },
            { position: "SP", name: "Walker Buehler", bbRefId: "buehlwa01" },
            { position: "RP", name: "Alexis Díaz", bbRefId: "diazal02" },
            { position: "RP", name: "Ryan Walker", bbRefId: "walkery01" }
        ];
        
        // ********UPDATE HITTERS DATA HERE********
        const hittersData = [
            { position: "C", name: "J.T. Realmuto", bbRefId: "realmjt01" },
            { position: "1B", name: "Cody Bellinger", bbRefId: "bellico01" },
            { position: "2B", name: "Ozzie Albies", bbRefId: "albieoz01" },
            { position: "SS", name: "Francisco Lindor", bbRefId: "lindofr01" },
            { position: "3B", name: "Jake Burger", bbRefId: "burgeja01" },
            { position: "OF", name: "Byron Buxton", bbRefId: "buxtoby01" },
            { position: "OF", name: "Lawrence Butler", bbRefId: "butlela01" },
            { position: "OF", name: "James Wood", bbRefId: "woodja01" },
            { position: "DH", name: "Dansby Swanson", bbRefId: "swansda01" },
            { position: "BENCH", name: "Joey Bart", bbRefId: "bartjo01" },
            { position: "BENCH", name: "Paul Goldschmidt", bbRefId: "goldspa01" },
            { position: "BENCH", name: "Kristian Campbell", bbRefId: "campbkr01" },
            { position: "BENCH", name: "Yoan Moncada", bbRefId: "moncayo01" },
            { position: "BENCH", name: "Josh Jung", bbRefId: "jungjo01" },
            { position: "BENCH", name: "Jung Hoo Lee", bbRefId: "leeju01" },
            { position: "BENCH", name: "Michael Busch", bbRefId: "buschmi01" }
        ];
        
        // Initialize when document is ready
        document.addEventListener('DOMContentLoaded', function() {
            // Update the date
            document.getElementById('update-date').textContent = "Updated on " + updateDate;
            
            // Render roster tables
            renderPitchers();
            renderHitters();
        });
        
        // Render pitchers table
        function renderPitchers() {
            const pitchersTable = document.getElementById('pitchers-body');
            pitchersTable.innerHTML = '';
            
            pitchersData.forEach(player => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="position">${player.position}</td>
                    <td>
                        <a href="https://www.baseball-reference.com/players/${player.bbRefId.charAt(0)}/${player.bbRefId}.shtml" 
                           class="player-link" target="_blank">${player.name}</a>
                    </td>
                `;
                pitchersTable.appendChild(row);
            });
        }
        
        // Render hitters table
        function renderHitters() {
            const hittersTable = document.getElementById('hitters-body');
            hittersTable.innerHTML = '';
            
            hittersData.forEach(player => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="position">${player.position}</td>
                    <td>
                        <a href="https://www.baseball-reference.com/players/${player.bbRefId.charAt(0)}/${player.bbRefId}.shtml" 
                           class="player-link" target="_blank">${player.name}</a>
                    </td>
                `;
                hittersTable.appendChild(row);
            });
        }
    </script>
